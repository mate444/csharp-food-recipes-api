    <RootNamespace>food_recipes_api</RootNamespace>
    <UserSecretsId>ceb42d1c-cb4f-46cb-9fa1-1cec697d241c</UserSecretsId>
    <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
  </PropertyGroup>

  <ItemGroup>
